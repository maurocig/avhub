{{>nav}}

<main class="m-4 relative h-max">

	<a href="/products">Productos</a> > <a href="/products/categories/{{product.category}}">{{product.category}}</a>
	<h1>{{product.title}}</h1>
	<div class="container p-0 mb-3">
		<img src="{{product.image}}" alt="">
	</div>

	<section class="mb-3">
		<span class="my-3">
			Precio: <strong>${{product.price}}</strong>
		</span>
	</section>

	<section>
		<span class="my-3">
			{{product.description}}
		</span>
	</section>

	<form method="post" action="/carts/{{user.cart}}/{{product._id}}">
		<input type="number" value="1" name="quantity" class="rounded h-10 p-2 w-12 mr-2 text-gray-800 font-bold">
		<button type="submit" class="bg-green-600 px-3 py-2 rounded my-3 text-white hover:bg-green-500 h-10 ">
			Agregar al carrito
		</button>
	</form>

</main>