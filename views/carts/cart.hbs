{{>nav}}

<main class="m-3">
	<h1>Carrito</h1>
	<div class="mb-3">
		{{cart.email}}
		<br>
		{{cart.address}}
	</div>
	<div class="bg-white rounded p-1 text-gray-800">
		{{#each cart.items}}
		<div class="grid-cols-2 bg-white -sm p-2 flex justify-between">
			<strong>{{this.quantity}}</strong>
			<strong>{{this.productId.title}}</strong>
			<strong>${{this.productId.price}}</strong>
			<div class="text-red-600 font-bold">
				<form method="POST" action="/carts/{{../cart._id}}/{{this._id}}?_method=DELETE">
					<button><strong>X</strong></button>
				</form>
			</div>
		</div>
		{{/each}}
	</div>

	<form action="/checkout" method="post">
		<button type="submit" class="bg-green-600 px-3 py-2 rounded my-3 text-white hover:bg-green-500 ">
			Finalizar compra
		</button>
	</form>
</main>